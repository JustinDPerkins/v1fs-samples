# Required Variables
# ===================

# Vision One API Key - REQUIRED
# Get this from your Trend Micro Vision One console
v1fs_apikey = "your-vision-one-api-key-here"

# Optional Variables
# ===================

# Vision One File Security Region
# Allowed values: us-east-1, eu-central-1, ap-northeast-1, ap-southeast-1, ap-southeast-2, ap-south-1, me-central-1
v1fs_region = "us-east-1"

# AWS Region where resources will be deployed
aws_region = "us-east-1"

# Resource prefix (max 20 characters)
# Applied to all resource names
prefix = "v1fs"

# Enable S3 Object Tagging
# Set to "true" to enable tagging of scanned objects, "false" to disable
enable_tag = "true"

# SDK Tags for Vision One UI
# Tags applied to scanned objects in Vision One console (comma-separated format)
# Format: "key:value" pairs separated by commas
sdk_tags = ["env:prod", "project:new_app", "cost-center:dev"]

# VPC Configuration (Optional)
# Uncomment and configure if deploying Lambda in a VPC
# vpc = {
#   subnet_ids         = ["subnet-12345678", "subnet-87654321"]
#   security_group_ids = ["sg-12345678"]
# }

# KMS Key ARN (Optional)
# Required if S3 buckets use KMS encryption
# kms_key_bucket = "arn:aws:kms:us-east-1:123456789012:key/12345678-1234-1234-1234-123456789012"

# IAM Permissions Boundary (Optional)
# ARN of permissions boundary policy to attach to IAM roles
# permissions_boundary_arn = "arn:aws:iam::123456789012:policy/PermissionsBoundary"
